<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd" id="WebApp_ID" version="3.0">
  <!-- Web工程名称 -->
  <display-name>张冠诚的Web工程</display-name>
  
  <!-- 站点默认首页 -->
  <welcome-file-list>
    <welcome-file>home.jsp</welcome-file>
    <welcome-file>index.jsp</welcome-file>
  </welcome-file-list>
  <!-- 初始化参数 -->
  <context-param>
	<param-name>version</param-name>
	<param-value>1.0</param-value>
  </context-param>
  <context-param>
	<param-name>SECTION_SIZE</param-name>
	<param-value>8</param-value>
  </context-param>
  <context-param>
	<param-name>PAGE_SIZE</param-name>
	<param-value>16</param-value>
  </context-param>
	<!-- 启动类 -->
  <servlet>
  	<servlet-name>MyStartup</servlet-name>
  	<servlet-class>cn.gzccc.run.MyStartup</servlet-class>
  	<load-on-startup>1</load-on-startup>
  </servlet>
  
  <!-- 监听器 -->
  <listener>
  <listener-class>cn.gzccc.env.MyListener</listener-class>
  </listener>
  
	<!-- 控制器 -->
	<servlet>
		<servlet-name>MyController</servlet-name>
		<servlet-class>cn.gzccc.ide.Controller</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>MyController</servlet-name>
		<url-pattern>*.act</url-pattern>
	</servlet-mapping>
	
</web-app>